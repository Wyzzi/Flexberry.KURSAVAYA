<h3 class="ui header">{{t "forms.i-i-s-k-u-r-s-a-v-a-y-a-банк-данные-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерКарт
      class=(if (v-get validationModel "номерКарт" "isInvalid") "error")
      label=(t "forms.i-i-s-k-u-r-s-a-v-a-y-a-банк-данные-e.номерКарт-caption")
      data-test-i-i-s-k-u-r-s-a-v-a-y-a-банк-данные-e-номерКарт=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерКарт" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.cVV
      class=(if (v-get validationModel "cVV" "isInvalid") "error")
      label=(t "forms.i-i-s-k-u-r-s-a-v-a-y-a-банк-данные-e.cVV-caption")
      data-test-i-i-s-k-u-r-s-a-v-a-y-a-банк-данные-e-cVV=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "cVV" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-k-u-r-s-a-v-a-y-a-банк-данные-e.датаОконч-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаОконч
      class=(if (v-get validationModel "датаОконч" "isInvalid") "error")
      data-test-i-i-s-k-u-r-s-a-v-a-y-a-банк-данные-e-датаОконч=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаОконч" "message")}}
  </div>
</form>
