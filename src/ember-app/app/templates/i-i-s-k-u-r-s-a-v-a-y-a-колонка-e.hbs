<h3 class="ui header">{{t "forms.i-i-s-k-u-r-s-a-v-a-y-a-колонка-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерКол
      class=(if (v-get validationModel "номерКол" "isInvalid") "error")
      label=(t "forms.i-i-s-k-u-r-s-a-v-a-y-a-колонка-e.номерКол-caption")
      data-test-i-i-s-k-u-r-s-a-v-a-y-a-колонка-e-номерКол=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерКол" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-k-u-r-s-a-v-a-y-a-колонка-e.заправБак-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.заправБак
      displayAttributeName="типТоплива"
      autocomplete=true
      relationName="заправБак"
      projection="ЗаправБакL"
      title=(t "forms.i-i-s-k-u-r-s-a-v-a-y-a-колонка-e.заправБак-caption")
      readonly=readonly
      componentName="заправБакLookup"
      class=(if (v-get validationModel "заправБак" "isInvalid") "error")
      data-test-i-i-s-k-u-r-s-a-v-a-y-a-колонка-e-заправБак=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "заправБак" "message")}}
  </div>
</form>
